@model IEnumerable<WebApplication4.Models.Entidades.Vendedor>
@{
	ViewData["Title"] = "Vendedor";
}

<h2>Vendedor</h2>
<p>
	<a asp-action="Create" class="btn btn-default">Create New</a> 
</p>
<table class="table table-striped table-hover">
	<thead>
		<tr class="success">
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nascimento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SalarioBase)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var elemento in Model)
		{

		<tr>
			<td>
				@Html.DisplayFor(modelitem => elemento.Nome)
			</td>
			<td>
				@Html.DisplayFor(modelitem => elemento.Email)
			</td>
			<td>
				@Html.DisplayFor(modelitem => elemento.Nascimento)
			</td>
			<td>
				@Html.DisplayFor(modelitem => elemento.SalarioBase)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@elemento.Id">Alterar</a> |
				<a asp-action="Detalhes" asp-route-id="@elemento.Id">Detalhes</a> |
				<a asp-action="Delete" asp-route-id="@elemento.Id">Deletar</a>
			</td>
		</tr>
		}
	</tbody>
</table>

