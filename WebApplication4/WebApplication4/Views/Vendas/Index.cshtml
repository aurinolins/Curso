@model WebApplication4.Models.ViewModel.SalesFormViewModel
@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
	<div class="col-md-6">
		<form class="form-horizontal" asp-action="BuscaSimples">
			<fieldset>
				<legend>Busca Simples</legend>
				<div class="form-group">
					<label for="datamin" class="control-label">Data Minima</label>
					<input type="date" name="datamin" class="form-control" />
					<label for="datamax" class="control-label">Data Maxima</label>
					<input type="date" name="datamin" class="form-control" />
					<div class="form-group">
						<input type="submit" value="Chamar" class="btn btn-default" />
						<a asp-action="Index">Voltar para tela Principal</a>
					</div>
				</div>
			</fieldset>
		</form>
		<form class="form-horizontal" asp-action="BuscaAgrupada">
			<fieldset>
				<legend>Busca Agrupada</legend>
				<div class="form-group">
					<label for="datamin" class="control-label">Data Mínima</label>
					<input type="date" name="minDate" class="form-control" />
					<label for="datamax" class="control-label">Data Maxima</label>
					<input type="date" name="maxDate" class="form-control" />
				</div>
				<div class="form-group">
					<input type="submit" value="Chamar" class="btn btn-default" />
					<a asp-action="Index">Voltar para tela Principal</a>
				</div>
			</fieldset>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>



